* {
  margin: 0;
  padding: 0;
}

/*
  1. Use a more-intuitive box-sizing model.
*/
*,
*::before,
*::after {
  box-sizing: border-box;
}
/*
    2. Remove default margin
  */
* {
  margin: 0;
}
/*
    Typographic tweaks!
    3. Add accessible line-height
    4. Improve text rendering
  */
body {
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}
/*
    5. Improve media defaults
  */
img,
picture,
video,
canvas,
svg {
  display: block;
  /* max-width: 100%; */
}
/*
    6. Remove built-in form typography styles
  */
input,
button,
textarea,
select {
  font: inherit;
}
/*
    7. Avoid text overflows
  */
p,
h1,
h2,
h3,
h4,
h5,
h6 {
  overflow-wrap: break-word;
}
/*
    8. Create a root stacking context
  */
#root,
#__next {
  isolation: isolate;
}

h1,
h2 {
  font-family: "Roboto", sans-serif;
  font-weight: 700 !important;
  font-style: normal;
}

/* Start Here






  */

.no-bullets {
  list-style: none;
}

.desktop-only {
  display: none;
}

header {
  background: #132736;
}

.home-flex {
  display: flex;
  align-items: center;
}

.cart-icon {
  scale: 100%;
}

.icon-container {
  margin: 10px;
}

.search {
  width: 100%;
}

.search input {
  width: 100%;
  border-radius: 10px;
  border: none;
  outline: none;
  padding: 0 10px;
}

.home-ads {
  max-width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  margin: 0 20px;
}

.ads {
  max-width: 100%;
  height: auto;
  margin: 10px 0;
}

.category {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5px;
}

.category-button {
  width: 90px;
  height: 30px;
  color: white;
  background: #132736;
  border: none;
  border-radius: 50px;
  margin: 0 5px;
}

.home-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 20px;
}

.second-portion {
  display: flex;
  justify-content: center;
  align-items: center;
}

.product-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px;
  margin-bottom: 0;
}

.product-container img {
  width: 70px;
  height: 70px;
}

.product-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 25%;
  height: 250px;
  background: #dfe3e9;
  text-align: center;
  border-radius: 10px;
  margin: 5px;
  padding: 5px;
}

.product-box h3 {
  font-size: 0.7rem;
  padding: 5px;
}

.product-box button {
  width: 90%;
  font-size: 0.7rem;
  margin: 10px;
  border: none;
  border-radius: 20px;
  height: 30px;
  background: #479eb6;
}

.carousel-box-home {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10px 0;
}

.custom-carousel-width {
  width: 90%;
}

@media (min-width: 576px) {
  header {
    background: #132736;
  }
  nav {
    margin: 0px;
  }
  body {
    background-color: #132736 !important;
  }
  .mobile-only {
    display: none;
  }
  .desktop-only {
    display: block;
  }

  .desktop-menu {
    display: flex;
  }

  .desktop-menu h2 {
    margin-left: 50px;
    margin-top: 10px;
    font-size: 1.2rem;
    color: white;
  }

  .apotheca-logo {
    margin-right: 20px;
  }

  .logo-name-cont {
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
  }
  .apotheca-name h3 {
    font-size: 0.8rem;
  }
  .search {
    width: 40%;
  }
  .search input {
    text-align: center;
    height: 35px;
    border-radius: 50px;
  }
  .pharmassist {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #479eb6;
    width: 200px;
    height: 40px;
    border-radius: 10px;
    color: white;
    padding: 0 20px;
    margin: 0 20px;
    cursor: pointer;
  }

  .pharm-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-right: 5px;
  }

  .pharm-assist {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 8px;
  }

  .pharmassist h2 {
    font-size: 1.4rem;
    text-align: end;
  }

  .pharmassist:hover {
    background: #36788b;
  }
  .account-section {
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    text-align: center;
  }
  .account-section h3 {
    font-size: 0.8rem;
  }
  .account-section .profile-logo {
    margin-left: 20px;
  }

  .home-flex {
    display: flex;
    align-items: center;
    margin: 0 20px;
  }
}
